<UserControl x:Class="CustomControl_Demo.NumericControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CustomControl_Demo"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <DockPanel Width="100"  Height="40">
        <DockPanel DockPanel.Dock="Right">
            <Button Content="▲" DockPanel.Dock="Top" Click="Up_Click"></Button>
            <Button Content="▼" DockPanel.Dock="Bottom" Click="Down_Click"></Button>
        </DockPanel>
        <TextBox Name="NumericValue" Text="0"></TextBox>
    </DockPanel>
</UserControl>
